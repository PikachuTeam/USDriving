<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/common_size_1"
    android:layout_marginLeft="@dimen/common_size_8"
    android:layout_marginRight="@dimen/common_size_8"
    android:minHeight="@dimen/common_size_60"
    app:cardCornerRadius="@dimen/common_size_3"
    app:cardPreventCornerOverlap="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:id="@+id/choiceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/raised_button"
            android:clickable="true"
            android:minHeight="@dimen/common_size_60">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:buttonTint="@color/orange"/>

            <TextView
                android:id="@+id/textViewAnswer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/checkBox"
                android:layout_centerInParent="true"
                android:paddingBottom="@dimen/common_size_5"
                android:paddingLeft="@dimen/common_size_10"
                android:paddingTop="@dimen/common_size_5"
                android:text="test"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_13"
                android:layout_marginBottom="@dimen/common_size_3"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
