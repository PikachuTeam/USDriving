<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/window_background2"
    >

    <LinearLayout
        android:layout_width="@dimen/size_3"
        android:layout_height="@dimen/size_3"
        android:background="@drawable/bg_exam_simulator_check_box"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgTick"
            android:layout_width="@dimen/size_1"
            android:layout_height="@dimen/size_1"
            android:background="@drawable/ic_tick"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>