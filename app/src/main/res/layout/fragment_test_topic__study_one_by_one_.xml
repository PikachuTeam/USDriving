<tatteam.com.app_common.ui.drawable.FractionFrameLayout
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_background2"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_1"
            card_view:cardCornerRadius="@dimen/common_size_6"
            card_view:cardElevation="@dimen/common_size_3"
            card_view:cardUseCompatPadding="true"
            android:gravity="center"
            android:id="@+id/card_question">
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_size_5"
                android:text="@string/test_card_question"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_15"
                android:textStyle="bold"
                />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPagerQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Number"
            android:text="1 of "
            android:textSize="@dimen/common_text_size_15"
            android:layout_marginLeft="@dimen/common_size_5"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_20"
            android:layout_marginLeft="@dimen/common_size_7"
            android:layout_marginRight="@dimen/common_size_7"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_10"
                android:id="@+id/viewWhite"
                android:layout_marginTop="@dimen/common_size_1"
                android:layout_marginLeft="@dimen/common_size_10"
                android:layout_marginRight="@dimen/common_size_10"
                android:background="@color/white"
                >
            </View>
            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/common_size_10"
                android:id="@+id/viewOrange"
                android:background="@color/orange"
                android:layout_marginTop="@dimen/common_size_1"
                android:layout_marginLeft="@dimen/common_size_10"
                android:layout_marginRight="@dimen/common_size_10"

                ></View>
        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            card_view:cardCornerRadius="@dimen/common_size_6"
            card_view:cardElevation="@dimen/common_size_3"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/card_explanation"
            >
            <LinearLayout
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_size_5"
                    android:text="@string/test_card_answer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size_15"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvChoiceA"
                    android:textSize="@dimen/common_text_size_15"
                    android:text="A"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/common_size_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvChoiceB"
                    android:textSize="@dimen/common_text_size_15"
                    android:text="B"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/common_size_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvChoiceC"
                    android:textSize="@dimen/common_text_size_15"
                    android:text="C"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/common_size_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvChoiceD"
                    android:textSize="@dimen/common_text_size_15"
                    android:text="D"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/common_size_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvExplanation"
                    android:textSize="@dimen/common_text_size_15"
                    android:text="E"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/common_size_5"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_65"
            android:gravity="center"
            android:layout_margin="@dimen/common_size_1"
            android:padding="@dimen/common_size_1"
            android:layout_alignParentBottom="true"
            >
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/common_size_100"
                android:layout_height="@dimen/common_size_55"
                android:id="@+id/btnPreviousLayout"
                android:gravity="center"
                android:layout_marginRight="@dimen/common_size_30"
                card_view:cardCornerRadius="@dimen/common_size_6"
                card_view:cardElevation="@dimen/common_size_3"
                card_view:cardUseCompatPadding="true"
                android:background="@drawable/raised_button"

                >
                <ImageView
                    android:id="@+id/btnPrevious"
                    android:layout_width="@dimen/common_size_50"
                    android:layout_height="@dimen/common_size_50"
                    android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:layout_gravity="center_horizontal"

                    />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/common_size_100"
                android:layout_height="@dimen/common_size_55"
                android:layout_toRightOf="@+id/btnPreviousLayout"
                android:id="@+id/btnNextLayout"
                android:gravity="center"
                android:layout_marginLeft="@dimen/common_size_30"
                card_view:cardCornerRadius="@dimen/common_size_6"
                card_view:cardElevation="@dimen/common_size_3"
                card_view:cardUseCompatPadding="true"
                android:background="@drawable/raised_button"
                >
                <ImageView
                    android:id="@+id/btnNext"
                    android:layout_width="@dimen/common_size_50"
                    android:layout_height="@dimen/common_size_50"
                    android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center_horizontal"></ImageView>
            </android.support.v7.widget.CardView>


            />
        </LinearLayout>





    </LinearLayout>
</tatteam.com.app_common.ui.drawable.FractionFrameLayout>

