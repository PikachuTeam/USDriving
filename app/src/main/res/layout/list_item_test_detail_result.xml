<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_15">

        <include layout="@layout/background_highlight" />

        <LinearLayout
            android:id="@+id/layoutTmp"
            android:layout_width="@dimen/size_13"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tvQuestionNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/written_test_question_no"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/imgQuestion"
            android:layout_toRightOf="@+id/layoutTmp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/common_size_10"
            >

            <TextView
                android:id="@+id/tvResultQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Alo"
                android:textSize="@dimen/text_size_5"
                android:layout_marginLeft="@dimen/common_size_5"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvResultAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Alo"
                android:textColor="@color/written_test_text_answer"
                android:textSize="@dimen/text_size_3"
                android:layout_marginLeft="@dimen/common_size_5"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgQuestion"
            android:layout_width="@dimen/size_7"
            android:layout_height="@dimen/size_7"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_line_size"
        android:background="@color/written_test_color_1" />
</LinearLayout>