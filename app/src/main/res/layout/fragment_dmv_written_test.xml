<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_1"
        android:background="@color/written_test_color_2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_5">

        <View
            android:id="@+id/leftView"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/written_test_color_2" />

        <View
            android:id="@+id/rightView"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/written_test_color_2" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rightView"
            android:layout_toRightOf="@+id/leftView"
            android:scrollbars="none"
            android:background="@color/window_background"
            >

            <LinearLayout
                android:id="@+id/layoutScrollContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </HorizontalScrollView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_1"
        android:background="@color/written_test_color_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_3"
        android:background="@color/ColorPrimary"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="Question 3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_5" />
        <Button
            android:id="@+id/btnResult"
            android:layout_width="@dimen/common_size_70"
            android:layout_height="@dimen/common_size_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size_150"
            android:background="@drawable/bg_button_shadow"
            android:text="Result"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="invisible"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_150"
        android:background="@color/window_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_3"
        android:background="@color/ColorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="Answer Choices"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_5" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/written_test_list_height">

        <LinearLayout
            android:id="@+id/layoutAnswerChoiceContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </ScrollView>


</LinearLayout>
