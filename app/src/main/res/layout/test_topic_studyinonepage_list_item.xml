<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_QuestionActivity"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_size_80"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="@dimen/common_size_6"
        card_view:cardElevation="@dimen/common_size_3"
        card_view:cardUseCompatPadding="true"
>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_80"
            android:background="@drawable/raised_button">
            <LinearLayout
                android:id="@+id/layout_Id"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_size_80"
                android:layout_marginLeft="@dimen/common_size_15"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/tv_IdQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textSize="@dimen/text_size_13"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_Question"
                android:layout_width="@dimen/common_size_300"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_size_10"
                android:layout_marginTop="@dimen/common_size_10"
                android:layout_toRightOf="@+id/layout_Id"
                android:layout_marginRight="@dimen/common_size_12"
                >

                <TextView
                    android:id="@+id/tv_Question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="What kinds of drugs, other than alcohol, can affect your driving ability"
                    android:textSize="@dimen/text_size_5"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </RelativeLayout>





    </android.support.v7.widget.CardView>


</RelativeLayout>