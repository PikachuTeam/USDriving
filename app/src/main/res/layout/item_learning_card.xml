<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_size_4"
        android:layout_marginLeft="@dimen/common_size_7"
        android:layout_marginRight="@dimen/common_size_7"
        android:layout_marginTop="@dimen/common_size_4"
        card_view:cardCornerRadius="@dimen/common_size_3"
        card_view:cardElevation="@dimen/common_size_3"
        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:id="@+id/layout_item_topic_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/raised_button"
            android:clickable="true"
            android:padding="@dimen/common_size_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_size_10">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_size_16"
                    android:src="@drawable/card" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/photo"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/topic_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_text_size_20" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/topic_name"
                        android:text="123"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_text_size_15" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/image_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_lock" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
