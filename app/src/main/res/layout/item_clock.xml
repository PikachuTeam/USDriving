<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">-

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/minute_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/exam_simulator_color_1"
            android:textSize="@dimen/text_size_6" />

        <TextView
            android:id="@+id/minute_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="@color/exam_simulator_color_1"
            android:textSize="@dimen/text_size_6"
            android:layout_toRightOf="@+id/minute_1"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="@color/exam_simulator_color_1"
        android:textSize="@dimen/text_size_6" />-

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/second_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/exam_simulator_color_1"
            android:textSize="@dimen/text_size_6" />

        <TextView
            android:id="@+id/second_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/exam_simulator_color_1"
            android:textSize="@dimen/text_size_6"
            android:layout_toRightOf="@+id/second_1"
            />
    </RelativeLayout>

</LinearLayout>