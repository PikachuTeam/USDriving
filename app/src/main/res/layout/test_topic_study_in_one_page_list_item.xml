<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:layout_marginLeft="@dimen/common_size_7"
        android:layout_marginRight="@dimen/common_size_7"
        android:layout_marginTop="@dimen/common_size_1"
        card_view:cardCornerRadius="@dimen/common_size_3"
        card_view:cardElevation="@dimen/common_size_3"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_80"
            android:background="@drawable/raised_button">

            <TextView
                android:id="@+id/tv_IdQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_size_5"
                android:text="01"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/layout_Question"
                android:layout_width="@dimen/common_size_300"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_size_10"
                android:layout_marginRight="@dimen/common_size_12"
                android:layout_marginTop="@dimen/common_size_10"
                android:layout_toRightOf="@+id/tv_IdQuestion">

                <TextView
                    android:id="@+id/tv_Question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="What kinds of drugs, other than alcohol, can affect your driving ability"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size_17" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>