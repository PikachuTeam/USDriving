<?xml version="1.0" encoding="utf-8"?>
<tatteam.com.app_common.ui.drawable.FractionFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/written_test_color_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5">

            <View
                android:id="@+id/leftView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/written_test_color_2" />

            <View
                android:id="@+id/rightView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/written_test_color_2" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/rightView"
                android:layout_toRightOf="@+id/leftView"
                android:background="@color/white"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layoutScrollContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

            </HorizontalScrollView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/written_test_color_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_3"
            android:background="@color/ColorPrimary">

            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="Question 3"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_5" />

            <include
                layout="@layout/item_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_4"
                android:layout_marginTop="@dimen/margin_1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_3"
            android:background="@color/ColorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="Answer Choices"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_5" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/written_test_list_height"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/layoutAnswerChoiceContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/divideView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/written_test_color_1" />

    </LinearLayout>
</tatteam.com.app_common.ui.drawable.FractionFrameLayout>
