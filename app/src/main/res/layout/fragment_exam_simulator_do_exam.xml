<?xml version="1.0" encoding="utf-8"?>
<tatteam.com.app_common.ui.drawable.FractionFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/written_test_color_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5">

            <View
                android:id="@+id/leftView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/written_test_color_2" />

            <View
                android:id="@+id/rightView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/written_test_color_2" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/rightView"
                android:layout_toRightOf="@+id/leftView"
                android:background="@color/white"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layoutScrollContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

            </HorizontalScrollView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/written_test_color_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_3"
            android:background="@color/ColorPrimary">

            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="@string/test_card_question"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_5" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_150">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_size_25"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparent"
                    android:orientation="horizontal"
                    android:id="@+id/layout_clock"
                    >

                    <TextView
                        android:id="@+id/minute_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/exam_simulator_color_1"
                        android:textSize="@dimen/text_size_6" />


                    <TextView
                        android:id="@+id/minute_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/exam_simulator_color_1"
                        android:textSize="@dimen/text_size_6" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/exam_simulator_color_1"
                        android:textSize="@dimen/text_size_6" />


                    <TextView
                        android:id="@+id/second_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/exam_simulator_color_1"
                        android:textSize="@dimen/text_size_6" />

                    <TextView
                        android:id="@+id/second_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/exam_simulator_color_1"
                        android:textSize="@dimen/text_size_6" />


                </LinearLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/layout_clock" />
            </RelativeLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_3"
            android:background="@color/ColorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="Answer Choices"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_5" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/written_test_list_height"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/layoutAnswerChoiceContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/divideView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/written_test_color_1" />

    </LinearLayout>
</tatteam.com.app_common.ui.drawable.FractionFrameLayout>
