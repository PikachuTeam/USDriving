<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_area_height"
        android:layout_marginTop="@dimen/common_size_5">

        <RelativeLayout
            android:id="@+id/thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/progress_bar_container_height"
            android:clickable="true">

            <ImageView
                android:id="@+id/image_thumb"
                android:layout_width="@dimen/progress_indicator_width"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_indicator" />

            <TextView
                android:id="@+id/text_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="@dimen/common_size_7"
                android:text="174"
                android:textColor="@color/essential_progress_bar_text_color"
                android:textSize="@dimen/common_size_12"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/progress_bar_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_bar_container_height"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/common_size_20"
            android:layout_marginRight="@dimen/common_size_20">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxHeight="@dimen/progress_bar_height"
                android:minHeight="@dimen/progress_bar_height"
                android:progressDrawable="@drawable/progress_bar" />
        </RelativeLayout>
    </RelativeLayout>
</merge>