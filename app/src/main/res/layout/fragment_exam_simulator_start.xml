<?xml version="1.0" encoding="utf-8"?>
<tatteam.com.app_common.ui.drawable.FractionFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutRule"
            android:layout_width="@dimen/exam_simulator_layout_rule_width"
            android:layout_height="@dimen/exam_simulator_layout_rule_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/bg_layout_rule"
            android:padding="@dimen/common_size_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_3"
                android:layout_marginTop="@dimen/margin_20"
                android:text="@string/exam_simulator_rule"
                android:textSize="@dimen/text_size_4" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/btnPreviousLayout"
            android:layout_width="@dimen/common_size_100"
            android:layout_height="@dimen/common_size_50"
            android:layout_marginTop="@dimen/common_size_10"
            card_view:cardCornerRadius="@dimen/common_size_3"
            card_view:cardPreventCornerOverlap="false">

            <TextView
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_start"
                android:gravity="center"
                android:text="@string/start"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_6"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutNotShowAgain"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/checkboxNotShowAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_exam_simulator_check_box"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/size_3"
                    android:layout_height="@dimen/size_3"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgTick"
                        android:layout_width="@dimen/size_1"
                        android:layout_height="@dimen/size_1"
                        android:background="@drawable/ic_tick"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/text_doNotShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/exam_simulator_not_show_again"
                android:textSize="@dimen/text_size_4" />
        </LinearLayout>
    </LinearLayout>
</tatteam.com.app_common.ui.drawable.FractionFrameLayout>
