<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgQuestion"
                android:layout_width="@dimen/size_7"
                android:layout_height="@dimen/size_7"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_5" />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_horizontal"
                android:text="Question"
                android:textSize="@dimen/text_size_6"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvChoiceA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@string/choice_a"
                android:textSize="@dimen/common_size_13"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvChoiceB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@string/choice_b"
                android:textSize="@dimen/common_size_13"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvChoiceC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@string/choice_c"
                android:textSize="@dimen/common_size_13"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvChoiceD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@string/choice_d"
                android:textSize="@dimen/common_size_13"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="Your answer: "
                android:textSize="@dimen/common_size_13"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="Alo"
                android:textSize="@dimen/common_size_13"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tvExplanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:text="Explanation: "
            android:textColor="@color/black"
            android:textSize="@dimen/common_size_13"
            android:textStyle="italic"

            />
    </LinearLayout>

</LinearLayout>