<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_size_84"
    android:layout_marginBottom="@dimen/common_size_13"
    android:layout_marginTop="@dimen/common_size_13"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/common_size_5"
    app:cardElevation="@dimen/common_size_3"
    card_view:cardPreventCornerOverlap="false"
    android:id="@+id/cardVideoTip"
    >

    <LinearLayout
        android:id="@+id/layoutVideoItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/raised_button"
        android:orientation="horizontal"
        android:padding="@dimen/common_size_10"

        >

        <ImageView
            android:id="@+id/imgVideoTipsItem"
            android:layout_width="@dimen/common_size_100"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txtVideoTipsItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_size_5"
            android:layout_marginLeft="@dimen/common_size_10"
            android:gravity="left"
            android:text="Test"
            android:textColor="@color/black"
            android:textSize="@dimen/common_size_20"
            android:ellipsize="end"
            android:singleLine="true"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>