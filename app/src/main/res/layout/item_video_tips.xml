<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_size_7"
        android:layout_marginRight="@dimen/common_size_7"
        card_view:cardCornerRadius="@dimen/common_size_3"
        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:id="@+id/layoutVideoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/raised_button"
            android:clickable="true"
            android:padding="@dimen/common_size_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:padding="@dimen/common_size_5">

                <ImageView
                    android:id="@+id/imgVideoTipsItem"
                    android:layout_width="@dimen/common_size_100"
                    android:layout_height="@dimen/common_size_60"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/txtVideoTipsItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_size_10"
                    android:layout_marginRight="@dimen/common_size_5"
                    android:gravity="left"
                    android:text="Test"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_size_20" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_lock" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>